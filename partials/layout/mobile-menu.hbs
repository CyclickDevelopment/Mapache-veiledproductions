<div class="mobile-menu-wrapper">
    <div class="mobile-menu w-full fixed inset-0 bg-blank min-h-screen left-auto z-50 overflow-y-auto overflow-x-hidden md:max-w-sm">
        <div class="mobile-menu-container">
            <div class="mobile-menu-header px-4 flex justify-between shadow-sm">
                <div class="js-dark-mode h-16 flex items-center cursor-pointer">
                    <svg class="icon is-large icon--moon"><use xlink:href="#icon-moon"></use></svg>
                    <svg class="icon is-large icon--sunny hidden"><use xlink:href="#icon-sunny"></use></svg>
                </div>

                <div class="flex items-center">
                    {{#if @site.logo}}
                        <img class="w-logo {{#if @custom.logo_dark_mode}} logo-light{{/if}}" src="{{img_url @site.logo size="s"}}" alt="{{@site.title}}"/>
                        {{#if @custom.logo_dark_mode}}<img class="w-logo logo-dark hidden" src="{{img_url @custom.logo_dark_mode size="s"}}" alt="{{@site.title}}"/>{{/if}}
                    {{else}}
                        <span class="text-28 font-bold leading-tight font-sans">{{@site.title}}</span>
                    {{/if}}
                </div>

                <div class="js-menu-close h-16 flex items-center cursor-pointer">
                    <svg class="icon is-large"><use xlink:href="#icon-close"></use></svg>
                </div>
            </div>

            <hr class="mt-0">

            {{!-- Menu  Mobile --}}
            {{#if @site.navigation}}
            <nav class="px-4 mobile-nav uppercase tracking-wide">
                {{navigation}}
            </nav>
            {{/if}}

            <hr>

            {{!-- Social Media - ./partials/components/social-media.hbs --}}
            <div>
                <span class="block px-4 text-sm">{{t "Follow"}}</span>
                {{> "components/social-media" class="mobile-social-media pb-5 text-title"}}
            </div>
        </div>

    </div>
    <div class="mobile-menu-bg bg-black inset-0 fixed z-20 hidden bg-opacity-60"></div>
</div>